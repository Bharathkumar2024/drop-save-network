{
  "info": {
    "name": "Vital Drop API",
    "description": "Blood Donation Management System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Hospital Signup",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Hospital\",\n  \"hospitalId\": \"TEST001\",\n  \"location\": \"123 Test St, New York\",\n  \"password\": \"password123\",\n  \"contactEmail\": \"test@hospital.com\",\n  \"contactPhone\": \"+1-555-0000\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/hospital/signup"}
          }
        },
        {
          "name": "Hospital Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hospitalId\": \"CGH001\",\n  \"password\": \"password123\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/hospital/login"}
          }
        },
        {
          "name": "Donor Signup",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Donor\",\n  \"email\": \"test@donor.com\",\n  \"phone\": \"+1-555-9999\",\n  \"bloodGroup\": \"O+\",\n  \"city\": \"New York\",\n  \"lastDonationDate\": null\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/donor/signup"}
          }
        },
        {
          "name": "Donor Verify OTP",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@donor.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/donor/verify-otp"}
          }
        },
        {
          "name": "Blood Bank Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bankId\": \"CBB001\",\n  \"password\": \"password123\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/bloodbank/login"}
          }
        }
      ]
    },
    {
      "name": "Hospitals",
      "item": [
        {
          "name": "Get Dashboard",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/hospitals/:id/dashboard", "variable": [{"key": "id", "value": ""}]}
          }
        },
        {
          "name": "Add Patient",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"age\": 45,\n  \"room\": \"3A\",\n  \"caseDescription\": \"Surgery\",\n  \"bloodType\": \"O+\",\n  \"unitsNeeded\": 3,\n  \"priority\": \"High\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/hospitals/:id/patients", "variable": [{"key": "id", "value": ""}]}
          }
        },
        {
          "name": "Create Emergency",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bloodType\": \"O+\",\n  \"unitsNeeded\": 5,\n  \"description\": \"Urgent: Multiple accident victims\",\n  \"priority\": \"Critical\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/hospitals/:id/emergency", "variable": [{"key": "id", "value": ""}]}
          }
        }
      ]
    },
    {
      "name": "Donors",
      "item": [
        {
          "name": "Get Nearby Emergencies",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/donors/:id/nearby-emergencies?city=New York", "variable": [{"key": "id", "value": ""}]}
          }
        },
        {
          "name": "Respond to Emergency",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"emergencyId\": \"\",\n  \"unitsPledged\": 2\n}"
            },
            "url": {"raw": "{{baseUrl}}/donors/:id/respond", "variable": [{"key": "id", "value": ""}]}
          }
        }
      ]
    },
    {
      "name": "Blood Banks",
      "item": [
        {
          "name": "Get Dashboard",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "{{baseUrl}}/bloodbanks/:id/dashboard", "variable": [{"key": "id", "value": ""}]}
          }
        },
        {
          "name": "Add Preservation Batch",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bloodType\": \"O+\",\n  \"units\": 10,\n  \"collectionDate\": \"2024-01-15\",\n  \"expiryDate\": \"2024-03-15\",\n  \"storageLocation\": \"Shelf 5\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/bloodbanks/:id/preservation", "variable": [{"key": "id", "value": ""}]}
          }
        },
        {
          "name": "Create Dispatch",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"preservationId\": \"\",\n  \"recipientId\": \"\",\n  \"recipientModel\": \"Hospital\",\n  \"units\": 3,\n  \"expectedDelivery\": \"2024-01-20T10:00:00Z\",\n  \"notes\": \"Standard delivery\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/bloodbanks/:id/dispatch", "variable": [{"key": "id", "value": ""}]}
          }
        }
      ]
    },
    {
      "name": "Stats",
      "item": [
        {
          "name": "Get Overview",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/stats/overview"}
          }
        }
      ]
    },
    {
      "name": "Utilities",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/health"}
          }
        },
        {
          "name": "Seed Database",
          "request": {
            "method": "POST",
            "url": {"raw": "{{baseUrl}}/seed"}
          }
        },
        {
          "name": "Clear Database",
          "request": {
            "method": "DELETE",
            "url": {"raw": "{{baseUrl}}/seed"}
          }
        }
      ]
    }
  ]
}